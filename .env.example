# Django
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,web

# Timezone
TIME_ZONE=Africa/Cairo
CELERY_TIMEZONE=Africa/Cairo

# Database (Docker services)
POSTGRES_DB=ai_agent
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=your-database-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis/Celery
REDIS_URL=redis://redis:6379/0

# Email (SMTP)
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0

# CalDAV (Manager 1)
CALDAV_URL_1=https://calendar.zoho.com/caldav/your-calendar-id/events/
CALDAV_USERNAME_1=manager1@domain.com
CALDAV_PASSWORD_1=your-app-password

# CalDAV (Manager 2)
CALDAV_URL_2=https://calendar.zoho.com/caldav/your-calendar-id/events/
CALDAV_USERNAME_2=manager2@domain.com
CALDAV_PASSWORD_2=your-app-password

# Zoho Mail Monitor
ZOHO_EMAIL=monitor@domain.com
ZOHO_EMAIL_PASSWORD=your-app-password

# Docker hint for mail monitor
DOCKER_CONTAINER=1
